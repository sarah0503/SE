<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/userDeparture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="출발지"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/userStop1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="경유지1"
            android:textSize="13sp"
            android:layout_marginRight="10dp"
            android:textColor="#707070"/>

        <TextView
            android:id="@+id/userStop2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="경유지2"
            android:textSize="13sp"
            android:layout_marginRight="10dp"
            android:textColor="#707070"/>

        <TextView
            android:id="@+id/userStop3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="경유지3"
            android:textSize="13sp"
            android:layout_marginRight="10dp"
            android:textColor="#707070"/>

        <TextView
            android:id="@+id/userArrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="도착지"
            android:textSize="15sp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <TextView
        android:id="@+id/userTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="출발시간"
        android:textSize="13sp"
        android:textColor="#707070"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear"/>

    <TextView
        android:id="@+id/userSeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="잔여좌석"
        android:textSize="13sp"
        android:textColor="#707070"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/bookmarkButton"
        app:layout_constraintTop_toBottomOf="@+id/linear"/>

    <Button
        android:id="@+id/bookmarkButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/btn_star"/>

</androidx.constraintlayout.widget.ConstraintLayout>